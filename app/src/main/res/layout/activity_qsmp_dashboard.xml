<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Qsmp_Dashboard_Activity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/ll_main_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:contentInsetLeft="0.0dip"
            app:contentInsetStart="0.0dip"
            >


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/actionbar_size_main"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/ll_main_name_layout"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/actionbar_size_main"
                    >

                    <LinearLayout
                        android:layout_alignParentLeft="true"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        >
                        <ImageView
                            android:layout_marginLeft="10dp"
                            android:id="@+id/img_ungridlogo_actionbar_back"
                            android:layout_width="55dp"
                            android:layout_height="35dp"
                            android:src="@drawable/qsmp_theme_light"
                            android:layout_gravity="left|center_vertical"
                            />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/txt_profile_actionbar_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Features"
                        android:textColor="@color/text_1"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true">


                        <ImageView
                            android:id="@+id/img_settings"
                            android:layout_width="50dp"
                            android:layout_height="35dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/profile_circle"
                            app:tint="@color/primary" />




                    </LinearLayout>


                </RelativeLayout>
            </LinearLayout>




        </androidx.appcompat.widget.Toolbar>




    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:layout_below="@+id/ll_main_header"
        android:id="@+id/scroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical"
        android:fillViewport="true" >


        <RelativeLayout
            android:background="#F6FAFD"
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="2dp">


                        <LinearLayout
                            android:id="@+id/ll_beaconlayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:minWidth="60dp"
                            android:orientation="horizontal"
                            android:paddingStart="@dimen/event_pricing_date_chooser_time_padding_vertical"
                            android:paddingLeft="@dimen/event_pricing_date_chooser_time_padding_vertical"
                            android:paddingTop="@dimen/event_pricing_date_chooser_time_padding_vertical"
                            android:paddingRight="@dimen/event_pricing_date_chooser_time_padding_vertical">


                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="left|center"
                                android:src="@drawable/offer_left" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_marginBottom="5dp"
                                >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="bottom"
                                    android:text="Taking you to the best deals"
                                    android:textColor="@color/text_1"
                                    android:textSize="20dp" />

                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:gravity="left"
                                    android:maxLines="1"
                                    android:text="new way to retailer to direct visitors..."
                                    android:textColor="@color/text_2"
                                    android:textSize="16dp"
                                    />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center|left"
                                    >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="bottom"
                                        android:text="Know More "
                                        android:textColor="@color/primary"
                                        android:textSize="20dp" />

                                    <ImageView
                                        android:padding="2dp"
                                        android:layout_marginTop="2dp"
                                        android:layout_gravity="center"
                                        android:layout_width="50dp"
                                        android:layout_height="35dp"
                                        android:src="@drawable/right_arrow"/>
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>




                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_way_finding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="2dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:minWidth="60dp"
                            android:orientation="horizontal"
                            android:paddingStart="@dimen/event_pricing_date_chooser_time_padding_vertical"
                            android:paddingLeft="@dimen/event_pricing_date_chooser_time_padding_vertical"
                            android:paddingTop="@dimen/event_pricing_date_chooser_time_padding_vertical"
                            android:paddingRight="@dimen/event_pricing_date_chooser_time_padding_vertical">


                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="left|center"
                                android:src="@drawable/wayfinding_left" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_marginBottom="5dp"
                                >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="bottom"
                                    android:text="Wayfinding &amp; Path Traking"
                                    android:textColor="@color/text_1"
                                    android:textSize="20dp" />

                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:gravity="left"
                                    android:maxLines="1"
                                    android:text="improve venue safety, accessibility, and..."
                                    android:textColor="@color/text_2"
                                    android:textSize="16dp"
                                    />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center|left"
                                    >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="bottom"
                                        android:text="Know More "
                                        android:textColor="@color/primary"
                                        android:textSize="20dp" />

                                    <ImageView
                                        android:padding="2dp"
                                        android:layout_marginTop="2dp"
                                        android:layout_gravity="center"
                                        android:layout_width="50dp"
                                        android:layout_height="35dp"
                                        android:src="@drawable/right_arrow"/>
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>




                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="2dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:minWidth="60dp"
                            android:orientation="horizontal"
                            android:paddingStart="@dimen/event_pricing_date_chooser_time_padding_vertical"
                            android:paddingLeft="@dimen/event_pricing_date_chooser_time_padding_vertical"
                            android:paddingTop="@dimen/event_pricing_date_chooser_time_padding_vertical"
                            android:paddingRight="@dimen/event_pricing_date_chooser_time_padding_vertical">


                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="left|center"
                                android:src="@drawable/asset_left" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_marginBottom="5dp"
                                >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="bottom"
                                    android:text="Asset Tracking"
                                    android:textColor="@color/text_1"
                                    android:textSize="20dp" />

                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:gravity="left"
                                    android:maxLines="1"
                                    android:text="prevent the misplacement of assets and..."
                                    android:textColor="@color/text_2"
                                    android:textSize="16dp"
                                    />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center|left"
                                    >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="bottom"
                                        android:text="Know More "
                                        android:textColor="@color/primary"
                                        android:textSize="20dp" />

                                    <ImageView
                                        android:padding="2dp"
                                        android:layout_marginTop="2dp"
                                        android:layout_gravity="center"
                                        android:layout_width="50dp"
                                        android:layout_height="35dp"
                                        android:src="@drawable/right_arrow"/>
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>





                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="2dp">


                        <LinearLayout
                            android:id="@+id/ll_connect"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:minWidth="60dp"
                            android:orientation="horizontal"
                            android:paddingStart="@dimen/event_pricing_date_chooser_time_padding_vertical"
                            android:paddingLeft="@dimen/event_pricing_date_chooser_time_padding_vertical"
                            android:paddingTop="@dimen/event_pricing_date_chooser_time_padding_vertical"
                            android:paddingRight="@dimen/event_pricing_date_chooser_time_padding_vertical">


                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="left|center"
                                android:src="@drawable/wifi_qam"
                                app:tint="@color/primary" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_marginBottom="5dp"
                                >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="bottom"
                                    android:text="Connect"
                                    android:textColor="@color/text_1"
                                    android:textSize="20dp" />

                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:gravity="left"
                                    android:maxLines="1"
                                    android:text="Connect to SSID"
                                    android:textColor="@color/text_2"
                                    android:textSize="16dp"
                                    />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center|left"
                                    >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="bottom"
                                        android:text="Know More "
                                        android:textColor="@color/primary"
                                        android:textSize="20dp" />

                                    <ImageView
                                        android:padding="2dp"
                                        android:layout_marginTop="2dp"
                                        android:layout_gravity="center"
                                        android:layout_width="50dp"
                                        android:layout_height="35dp"
                                        android:src="@drawable/right_arrow"/>
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>




                </LinearLayout>


            </LinearLayout>




        </RelativeLayout>


    </ScrollView>









</RelativeLayout>
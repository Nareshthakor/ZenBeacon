<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F2F7"
    tools:context=".About_Activity">


    <RelativeLayout
        android:id="@+id/ll_main_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F3F2F7"
        android:orientation="vertical">


        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/ll_main_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:background="@color/white"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:contentInsetLeft="0.0dip"
                app:contentInsetStart="0.0dip"
                >


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/actionbar_size_main"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:id="@+id/ll_main_name_layout"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/actionbar_size_main"
                        >

                        <ImageView
                            android:id="@+id/img_about_actionbar_back"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/ic_arrow_back"
                            app:tint="@color/primary" />

                        <TextView
                            android:id="@+id/txt_about_actionbar_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="About"
                            android:textColor="@color/text_1"
                            android:textSize="20dp"
                            android:textStyle="bold" />




                    </RelativeLayout>
                </LinearLayout>




            </androidx.appcompat.widget.Toolbar>




        </com.google.android.material.appbar.AppBarLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/ll_qamlogo"
                android:layout_width="260dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                card_view:cardCornerRadius="15dp"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/img_logo"
                    android:layout_width="200dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/qsmp_theme_light" />

            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/txt_appname"
                android:layout_below="@+id/img_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="QSMP"
                android:textSize="22dp"
                android:textColor="@color/black_opaque_90"
                android:gravity="center"/>

            <TextView
                android:padding="15dp"
                android:id="@+id/txt_appversion"
                android:layout_below="@+id/txt_appname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp"
                android:textColor="@color/black_opaque_90"
                android:gravity="center"/>
        </LinearLayout>









    </RelativeLayout>









</RelativeLayout>